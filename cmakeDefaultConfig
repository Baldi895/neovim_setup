MY DEFAULT CMAKE CONFIG FILE: 

cmake_minimum_required(VERSION 3.27)
project(sandbox VERSION 0.1.0 LANGUAGES C CXX)

set(CMAKE_C_STANDARD 17)
set(CMAKE_CXX_STANDARD 17)
include(CTest)
enable_testing()
set(OSBitness 32)
if(CMAKE_SIZEOF_VOID_P EQUAL 8)
set(OSBitness 64)
endif()
set(CMAKE_BUILD_PARALLEL_LEVEL 8)
set(CMAKE_EXPORT_COMPILE_COMMANDS 1)
set(FullOutputDir "${CMAKE_SOURCE_DIR}/bin/${CMAKE_SYSTEM_NAME}/x${OSBitness}/${CMAKE_BUILD_TYPE}")
set(CMAKE_ARCHIVE_OUTPUT_DIRECTORY "${FullOutputDir}/static_libs")
set(CMAKE_LIBRARY_OUTPUT_DIRECTORY "${FullOutputDir}")
set(CMAKE_RUNTIME_OUTPUT_DIRECTORY "${FullOutputDir}")
file(GLOB_RECURSE HEADERS "." "src/headers/*.h" "src/headers/*.hpp")
set(LIBS_DIR "${CMAKE_SOURCE_DIR}/libs")
file(GLOB_RECURSE SOURCES "main.cpp" "src/*.cpp" "main.c" "src/*.c" "${LIBS_DIR}/Include/stb/stb_image.cpp")



include_directories(HEADERS)
include_directories(${LIBS_DIR}/Include)

add_executable(${PROJECT_NAME} ${SOURCES})

target_precompile_headers(${PROJECT_NAME} PUBLIC pch.h ${LIBS_DIR}/Include/glad/glad.h ${LIBS_DIR}/Include/stb/stb_image.h)

target_link_libraries(${PROJECT_NAME} Winmm.lib ${LIBS_DIR}/lib/libglfw3.a)

set(CPACK_PROJECT_NAME ${PROJECT_NAME})
set(CPACK_PROJECT_VERSION ${PROJECT_VERSION})
include(CPack)
